{
  "name": "erdmannfreunde/contao-grid-bundle",
  "description": "Contao Extension to create grid-layouts",
  "keywords": [
    "contao",
    "grid",
    "bootstrap",
    "euf grid"
  ],
  "type": "contao-bundle",
  "homepage": "https://github.com/ErdmannFreunde/contao-grid-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Erdmann & Freunde",
      "homepage": "https://erdmann-freunde.de",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "moin@erdmann-freunde.de",
    "issues": "https://github.com/ErdmannFreunde/contao-grid-bundle/issues",
    "source": "https://github.com/ErdmannFreunde/contao-grid-bundle"
  },
  "require": {
    "php": ">=8.1",
    "contao/core-bundle": "^5.0",
    "symfony/config": "^5.0 || ^6.0",
    "symfony/dependency-injection": "^5.0 || ^6.0",
    "symfony/http-kernel": "^5.0 || ^6.0"
  },
  "require-dev": {
    "contao/manager-plugin": "^2.7",
    "contao/easy-coding-standard": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "ErdmannFreunde\\ContaoGridBundle\\": "src"
    }
  },
  "extra": {
    "contao-manager-plugin": "ErdmannFreunde\\ContaoGridBundle\\ContaoManager\\Plugin"
  },
  "config": {
    "allow-plugins": {
      "contao-components/installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "contao/manager-plugin": true,
      "php-http/discovery": true
    }
  }
}
